<% provide(:title, "Sponsoring Companies") %>
<%= link_to "View on a Map", "#" %>
<% count = 0 %>
<% @companies.each do |company| %>
  <% if count % 3 == 0 %>
    <div class="row">
  <% end %>
    <div class="col-md-4 portfolio-item">
        <a href="#">
          <%= image_tag(company.logo, alt: "#{company.name} logo", class: "img-responsive center-block") %>
        </a>
        <h3>
          <%= link_to company.name, company.website %>
        </h3>
        <h4><strong>Number of Interns: </strong><%= company.num_interns %></h4>
        <h4><strong><%= "Cohort".pluralize(company.which_cohorts.length) %> Sponsored: </strong><%= company.which_cohorts.join(", ") %></h4>
    </div>
  <% count += 1 %>
  <% if count % 3 == 0 %>
    </div>
    <hr>
  <% end %>
<% end %>
