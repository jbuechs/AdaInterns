<%= form_for @employee, :html => {:class => "form-group"} do |f| %>
  <fieldset>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control', :required => true %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control', :required => true %>
    <%= f.label :position %>
    <%= f.text_field :position, class: 'form-control', :required => true %>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
    <%= f.label :twitter %>
    <%= f.text_field :twitter, class: 'form-control' %>
    <%= f.label :linkedin %>
    <%= f.text_field :linkedin, class: 'form-control' %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <br>
    <%= f.collection_select(:company_id, Company.all, :id, :name, {prompt: "Company:"}, {class: 'form-control', :required => true }) %>
    <br>
    <%= f.submit value: "#{button_text}", class: "btn btn-primary"%>
  </fieldset>
<% end %>
