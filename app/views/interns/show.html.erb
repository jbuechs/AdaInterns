<% provide(:title, @intern.full_name) %>
<div class="row">
  <div class="col-lg-3 col-sm-4">
    <%= image_tag @intern.get_image, class: "img-responsive center-block" %>
  </div>
  <div class="col-lg-9 col-sm-8">
    <h2>Bio</h2>
    <h3>Contact</h3>
    <% if @intern.has_twitter? %>
      <%= link_to image_tag("twitter.png"), "https://www.twitter.com/#{@intern.twitter}" %>
    <% end %>
    <% if @intern.has_linkedin? %>
      <%= link_to image_tag("linkedin.png"), @intern.linked_in %>
    <% end %>
  </div>

</div>
